
{{#with course}}
  <h1>Редактировать {{title}}</h1>

  <form action="/courses/edit" method="POST" class="course-form">
    <div class="input-field col s6">
      <input 
        id="title"
        name="title"
        type="text"
        class="validate"
        value="{{title}}"
        required
      >
      <label for="title">Название курса</label>
      <span class="helper-text" data-error="Введите название"></span>
    </div>

    <div class="input-field col s6">
      <input 
        id="price"
        name="price"
        type="number"
        class="validate"
        value={{price}}
        required 
        min="1"
      >
      <label for="price">Цена курса</label>
      <span class="helper-text" data-error="Введите цену"></span>
    </div>

    <div class="input-field col s6">
      <input
        id="img"
        name="imgURL"
        type="text"
        class="validate"
        value={{imgURL}}
        required
        min="1"
      >
      <label for="img">URL Картинки курса</label>
      <span class="helper-text" data-error="Введите URL картинке"></span>
    </div>

    <input type="hidden" name="id" value="{{_id}}">

    <input type="hidden" name="_csrf" value="{{@root.csrf}}">

    <button tipe="submit" class="btn btn-primary">Редактировать курс</button>
  </form>

  <form action="/courses/remove" method="POST">
    <input type="hidden" name="id" value="{{_id}}">

    <input type="hidden" name="_csrf" value="{{@root.csrf}}">

    <button class="btn red">Удалить курс</button>
  </form>
{{/with}}
